{% verbatim %}
{% if review_status and rating %}
<span class="rating mb-2 mr-1">
{% for i in 1..5 %}
  {% if rating >= i %}
  <i class="fas fa-star"></i>
  {% elseif (i - rating) < 1 %}
  <i class="fas fa-star-half-alt"></i>
  {% else %}
  <i class="far fa-star"></i>
  {% endif %}
{% endfor %}
</span>
<span class="badge badge-secondary mr-1">{{ rating|round }}/5</span>
<span>{{ reviews }}</span>
{% endif %}
{% endverbatim %}
