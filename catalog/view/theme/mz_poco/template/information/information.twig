{{ header }}
<div id="information-information" class="container content pb-5">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      {% for breadcrumb in breadcrumbs|slice(0,-1) %}
        <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
      <li class="breadcrumb-item active" aria-current="page">{{ breadcrumbs|last.text }}</li>
    </ol>
  </nav>
  <div class="row">
  
    {{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-md-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-md-9' %}
    {% else %}
    {% set class = 'col-md-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">
      {{ content_top }}
      
      <div class="about banner d-flex align-items-center justify-content-center flex-column">
        <div class="banner-text">
          <h2 class="page-title">{{ heading_title }}</h2>
          <div class="feature_divider"></div>
        </div>
      </div>
        <style>
          .about-content img{
            width:100% !important;
          }
          .small-down—one-whole h3{
            margin-bottom:30px;
          }
          .small-down—one-whole + .small-down—one-whole{
            margin-block:30px;
          }
        </style>

      <div class="three-fourths columns medium-down--one-whole offset-by-two is-hidden-offset-mobile-only page">
       {{ description }}
      </div>
      {{ content_bottom }}
    </div>
      {{ column_right }}
    </div>
</div>
{{ footer }}