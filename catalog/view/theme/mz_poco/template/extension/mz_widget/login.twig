{% if title %}
<h3 class="widget-title">{{ title }}</h3>
{% endif %}
<form action="{{ action }}" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="input-email">{{ entry_email }}</label>
    <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control form-control-{{ size }}" />
  </div>
  <div class="form-group">
    <label for="input-password">{{ entry_password }}</label>
    <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control form-control-{{ size }}" />
    <a href="{{ forgotten }}">{{ text_forgotten }}</a></div>
  <input type="submit" value="{{ button_login }}" class="btn btn-{{ color }} btn-{{ size }}" />
  {% if redirect %}
  <input type="hidden" name="redirect" value="{{ redirect }}" />
  {% endif %}
</form>