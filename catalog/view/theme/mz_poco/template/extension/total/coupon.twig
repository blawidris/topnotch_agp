<div class="card">
  <h5 class="card-header border-bottom-0 align-items-center d-flex collapsed" data-toggle="collapse" data-target="#collapse-coupon">{{ heading_title }} <i class="ml-auto fas fa-plus"></i></h5>
  <div id="collapse-coupon" class="collapse" data-parent="#accordion">
    <div class="card-body pt-0">
      	<div class="input-group">
			<input type="text" name="coupon" value="{{ coupon }}" placeholder="{{ entry_coupon }}" id="input-coupon" class="form-control"/>
			<div class="input-group-append">
				<button type="button" id="button-coupon" data-loading-text="{{ text_loading }}" class="btn btn-primary">{{ button_coupon }}</button>
			</div>
		</div>
    </div>
  </div>
  <script><!--
  $('#button-coupon').on('click', function() {
	  $.ajax({
		  url: 'index.php?route=extension/total/coupon/coupon',
		  type: 'post',
		  data: 'coupon=' + encodeURIComponent($('input[name=\'coupon\']').val()),
		  dataType: 'json',
		  beforeSend: function() {
			  $('#button-coupon').text('{{ text_loading }}');
		  },
		  complete: function() {
			  $('#button-coupon').text('{{ button_coupon }}');
		  },
		  success: function(json) {
				$('.alert-dismissible').remove();

				if (json['error']) {
					$('#collapse-coupon .card-body').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
				}

				if (json['redirect'] && !$('#maza-checkout').length) {
					location = json['redirect'];
				}
				if($('#maza-checkout').length){
					$.getJSON("index.php?route=extension/maza/checkout/total/update", function(json) {
						if (json['redirect']) location = json['redirect'];
						$("#checkout-total").replaceWith(json.total);
						$("#payment-method").replaceWith(json.payment_method);
					});
				}
		  },
		  error: function(xhr, ajaxOptions, thrownError) {
			  alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		  }
	  });
  });
  //-->
  </script>
</div>
