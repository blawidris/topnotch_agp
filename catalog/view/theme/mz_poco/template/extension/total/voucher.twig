<div class="card">
  <h5 class="card-header border-bottom-0 align-items-center d-flex collapsed" data-toggle="collapse" data-target="#collapse-voucher">{{ heading_title }} <i class="ml-auto fas fa-plus"></i></h5>
  <div id="collapse-voucher" class="collapse" data-parent="#accordion">
    <div class="card-body pt-0">
      	<div class="input-group">
			<input type="text" name="voucher" value="{{ voucher }}" placeholder="{{ entry_voucher }}" id="input-voucher" class="form-control"/>
			<div class="input-group-append">
				<input type="submit" value="{{ button_voucher }}" id="button-voucher" data-loading-text="{{ text_loading }}" class="btn btn-primary"/>
			</div>
		</div>
    </div>
  </div>
  <script><!--
  $('#button-voucher').on('click', function() {
	  $.ajax({
		  url: 'index.php?route=extension/total/voucher/voucher',
		  type: 'post',
		  data: 'voucher=' + encodeURIComponent($('input[name=\'voucher\']').val()),
		  dataType: 'json',
		  beforeSend: function() {
			  $('#button-voucher').val('{{ text_loading }}');
		  },
		  complete: function() {
			  $('#button-voucher').val('{{ button_voucher }}');
		  },
		  success: function(json) {
				$('.alert-dismissible').remove();

				if (json['error']) {
					$('#collapse-voucher .card-body').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
				}

				if (json['redirect'] && !$('#maza-checkout').length) {
					location = json['redirect'];
				}
				if($('#maza-checkout').length){
					$.getJSON("index.php?route=extension/maza/checkout/total/update", function(json) {
						if (json['redirect']) location = json['redirect'];
						$("#checkout-total").replaceWith(json.total);
						$("#payment-method").replaceWith(json.payment_method);
					});
				}
		  },
		  error: function(xhr, ajaxOptions, thrownError) {
			  alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		  }
	  });
  });
  //--></script>
</div>
