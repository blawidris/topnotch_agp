<div class="toast m-3" role="alert" aria-live="assertive" aria-atomic="true" data-delay="10000">
    <div class="toast-header">
        <span class="mr-auto"><i class="fas fa-shopping-cart"></i> {{ total }}</span>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
    <div class="toast-body">
        <div class="d-flex mb-3 align-items-start">
            <img src="{{ thumb }}" class="img-thumbnail mr-2 flex-shrink-0" /> <p>{{ success }}</p>
        </div>
        <div class="form-row">
            <div class="col"><a class="btn btn-primary btn-block" href="{{ cart }}">{{ text_cart }} <i class="fas fa-long-arrow-alt-right"></i></a></div>
            <div class="col"><a class="btn btn-secondary btn-block" href="{{ checkout }}">{{ text_checkout }} <i class="fas fa-long-arrow-alt-right"></i></a></div>
        </div>
    </div>
</div>