<div class="toast m-3" role="alert" aria-live="assertive" aria-atomic="true" data-delay="10000">
    {% if not logged %}{# Login required #}
    <div class="toast-header bg-danger text-danger-inverse"> 
        <span class="mr-auto"><i class="fas fa-exclamation-triangle"></i> {{ text_login }}</span>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
    <div class="toast-body">
        <div class="d-flex mb-3 align-items-start">
            <img src="{{ thumb }}" class="img-thumbnail mr-2 flex-shrink-0" /> <p>{{ success }}</p>
        </div>
        <div class="form-row">
            <div class="col"><a class="btn btn-danger btn-block" href="{{ login }}">{{ text_login }} <i class="fas fa-long-arrow-alt-right"></i></a></div>
            <div class="col"><a class="btn btn-secondary btn-block" href="{{ register }}">{{ text_register }} <i class="fas fa-long-arrow-alt-right"></i></a></div>
        </div>
    </div>
    {% else %} {# Success #}
    <div class="toast-header">
        <span class="mr-auto"><i class="fas fa-heart"></i> {{ total }}</span>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
    <div class="toast-body">
        <div class="d-flex mb-3 align-items-start">
            <img src="{{ thumb }}" class="img-thumbnail mr-2 flex-shrink-0" /> <p>{{ success }}</p>
        </div>
        <a class="btn btn-secondary btn-block" href="{{ wishlist }}">{{ total }} <i class="fas fa-long-arrow-alt-right"></i></a>
    </div>
    {% endif %}
</div>