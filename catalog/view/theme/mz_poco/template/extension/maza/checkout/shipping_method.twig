<div class="mb-5" id="shipping-method">
  <h4 class="card-title">{{ text_shipping_method }}</h4>
  {% if error_warning %}
    <div class="alert alert-warning"><i class="fas fa-exclamation-circle"></i> {{ error_warning }}</div>
  {% endif %}
  {% for shipping_method in shipping_methods %}
    <p class="mb-1"><strong>{{ shipping_method.title }}</strong></p>
    {% if not shipping_method.error %}
      {% for quote in shipping_method.quote %}
        <div class="custom-control custom-radio mb-2">
          {% if quote.code == code %}
            <input type="radio" id="input-shipping-method-{{ quote.code }}" name="shipping_method" value="{{ quote.code }}" class="custom-control-input" checked="checked">
          {% else %}
            <input type="radio" id="input-shipping-method-{{ quote.code }}" name="shipping_method" value="{{ quote.code }}" class="custom-control-input">
          {% endif %}
          <label class="custom-control-label" for="input-shipping-method-{{ quote.code }}">{{ quote.title }} - {{ quote.text }}</label>
        </div>
      {% endfor %}
    {% else %}
      <div class="alert alert-danger alert-dismissible">{{ shipping_method.error }}</div>
    {% endif %}
  {% endfor %}
</div>
