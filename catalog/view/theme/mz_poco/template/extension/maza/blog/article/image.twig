{% verbatim %}{% if thumb and images is empty %}{% endverbatim %}
<img src="{% verbatim %}{{ thumb }}{% endverbatim %}" {% verbatim %}{% if srcset %}srcset="{{ srcset }}"{% endif %}{% endverbatim %} {% if srcset_sizes %}sizes="{{ srcset_sizes }}"{% endif %} title="{% verbatim %}{{ heading_title }}{% endverbatim %}" class="img-fluid mx-auto" alt="{% verbatim %}{{ heading_title }}{% endverbatim %}" />
{% verbatim %}{% elseif thumb and images %}{% endverbatim %}
{% if additional_image_position == 'top' %}
<div class="swiper-viewport mb-2">
  <div id="article-image-carousel-indicators{{ suffix }}" class="swiper-container">
    <div class="swiper-wrapper">
      <div data-target="#article-image-carousel{{ suffix }}" data-slide-to="0" class="swiper-slide active"><img src="{% verbatim %}{{ thumb }}{% endverbatim %}" {% verbatim %}{% if srcset %}srcset="{{ srcset }}"{% endif %}{% endverbatim %} {% if srcset_sizes %}sizes="{{ srcset_sizes }}"{% endif %} class="img-fluid" alt="{% verbatim %}{{ heading_title }}{% endverbatim %}" /></div>
      {% verbatim %}{% set slide_to = 1 %}{% endverbatim %}
      {% verbatim %}{% for image in images %}{% endverbatim %}
        <div data-target="#article-image-carousel{{ suffix }}" data-slide-to="{% verbatim %}{{ slide_to }}{% endverbatim %}" class="swiper-slide"><img src="{% verbatim %}{{ image.image }}{% endverbatim %}" {% verbatim %}{% if image.srcset %}srcset="{{ image.srcset }}"{% endif %}{% endverbatim %} {% if srcset_sizes %}sizes="{{ srcset_sizes }}"{% endif %} class="img-fluid" alt="{% verbatim %}{{ heading_title }}{% endverbatim %}" /></div>
        {% verbatim %}{% set slide_to = slide_to + 1 %}{% endverbatim %}
      {% verbatim %}{% endfor %}{% endverbatim %}
    </div>
    <div class="swiper-pager">
      <div class="swiper-button-prev fa fa-chevron-left"></div>
      <div class="swiper-button-next fa fa-chevron-right"></div>
    </div>
  </div>
</div>
{% endif %}
<div id="article-image-carousel{{ suffix }}" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="{% verbatim %}{{ thumb }}{% endverbatim %}" {% verbatim %}{% if srcset %}srcset="{{ srcset }}"{% endif %}{% endverbatim %} {% if srcset_sizes %}sizes="{{ srcset_sizes }}"{% endif %} class="d-block w-100" alt="{% verbatim %}{{ heading_title }}{% endverbatim %}" />
    </div>
    {% verbatim %}{% for image in images %}{% endverbatim %}
    <div class="carousel-item">
      <img src="{% verbatim %}{{ image.image }}{% endverbatim %}" {% verbatim %}{% if image.srcset %}srcset="{{ image.srcset }}"{% endif %}{% endverbatim %} {% if srcset_sizes %}sizes="{{ srcset_sizes }}"{% endif %} class="d-block w-100" alt="{% verbatim %}{{ heading_title }}{% endverbatim %}" />
    </div>
    {% verbatim %}{% endfor %}{% endverbatim %}
  </div>
  <a class="carousel-control-prev" href="#article-image-carousel{{ suffix }}" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#article-image-carousel{{ suffix }}" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
{% if additional_image_position == 'bottom' %}
<div class="swiper-viewport mt-2">
  <div id="article-image-carousel-indicators{{ suffix }}" class="swiper-container">
    <div class="swiper-wrapper">
      <div data-target="#article-image-carousel{{ suffix }}" data-slide-to="0" class="swiper-slide active"><img src="{% verbatim %}{{ thumb }}{% endverbatim %}" {% verbatim %}{% if srcset %}srcset="{{ srcset }}"{% endif %}{% endverbatim %} {% if srcset_sizes %}sizes="{{ srcset_sizes }}"{% endif %} class="img-fluid" alt="{% verbatim %}{{ heading_title }}{% endverbatim %}" /></div>
      {% verbatim %}{% set slide_to = 1 %}{% endverbatim %}
      {% verbatim %}{% for image in images %}{% endverbatim %}
        <div data-target="#article-image-carousel{{ suffix }}" data-slide-to="{% verbatim %}{{ slide_to }}{% endverbatim %}" class="swiper-slide"><img src="{% verbatim %}{{ image.image }}{% endverbatim %}" {% verbatim %}{% if image.srcset %}srcset="{{ image.srcset }}"{% endif %}{% endverbatim %} {% if srcset_sizes %}sizes="{{ srcset_sizes }}"{% endif %} class="img-fluid" alt="{% verbatim %}{{ heading_title }}{% endverbatim %}" /></div>
        {% verbatim %}{% set slide_to = slide_to + 1 %}{% endverbatim %}
      {% verbatim %}{% endfor %}{% endverbatim %}
    </div>
    <div class="swiper-pager">
      <div class="swiper-button-prev fa fa-chevron-left"></div>
      <div class="swiper-button-next fa fa-chevron-right"></div>
    </div>
  </div>
</div>
{% endif %}
{% verbatim %}{% endif %}{% endverbatim %}
<script>
$(function(){
    $('#article-image-carousel-indicators{{ suffix }}').swiper({
            direction: 'horizontal',
            slidesPerView: 5,
            nextButton: '#article-image-carousel-indicators{{ suffix }} .swiper-button-next',
            prevButton: '#article-image-carousel-indicators{{ suffix }} .swiper-button-prev',
            spaceBetween: 10,
            loop: false
    });
});
</script>